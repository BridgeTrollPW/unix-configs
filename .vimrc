set number	
set nowrap	
set showbreak=+++
set textwidth=100
set showmatch
set spell
set errorbells
set visualbell

set hlsearch	
set smartcase	
set ignorecase	
set incsearch	
 
set autoindent	
set expandtab	
set shiftwidth=4	
set smartindent	
set smarttab	
set softtabstop=4	
 

set confirm	
set ruler	
set showtabline=2	
 
set undolevels=1000	
set backspace=indent,eol,start	

syntax on
"https://github.com/everard/vim-aurora/blob/master/colors/aurora.vim
colorscheme aurora

set autochdir
